{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    
    <ul>
        {% for product in products %}
            <li>
                <a href="{{ path('product', {'id': product.id}) }}">
                    {{ product.name }} - ${{ product.price }}
                </a>
            </li>
        {% else %}
            <li>No products found.</li>
        {% endfor %}
    </ul>
{% endblock %}
